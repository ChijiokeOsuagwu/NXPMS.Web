    <div class="card" style="max-width:600px">
        <div class="card-header bg-dark">
            <h4 class="text-white">User Information</h4>
        </div>
        <div class="card-body bg-secondary">
            @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle"></i>
                    <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i>
                    <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle"></i>
                    <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        <form asp-controller="Security" asp-action="ManageUser" method="post">
            <div class="row">
                <div class="col-md-12 mb-2">
                    <input type="hidden" asp-for="EmployeeId" />
                    <label asp-for="FullName" class="form-label text-white fw-bold"></label>
                    <input asp-for="FullName" class="form-control fw-bold" readonly="readonly">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mb-3">
                    <input type="hidden" asp-for="UserId" />
                    <label asp-for="Username" class="form-label text-white fw-bold"></label>
                    <input asp-for="Username" class="form-control fw-bold" readonly="readonly">
                </div>
            </div>
            @if (Model.LockoutEnabled)
            {
                <div class="row">
                    <div class="col-md-12 mb-2">
                        <i class="fa fa-lock" aria-hidden="true" style="font-size:1.2rem; color:white"></i>&nbsp;&nbsp;
                        <span class="text-white fw-bold">This Account Is Locked</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 mb-4">
                        <label asp-for="LockoutEndFormatted" class="form-label text-white fw-bold"></label>
                        <input asp-for="LockoutEndFormatted" class="form-control fw-bold" readonly="readonly">
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-12 mb-4">
                        <i class="fa fa-unlock" aria-hidden="true" style="font-size:1.2rem; color:white"></i>
                        &nbsp;&nbsp;<span class="text-white fw-bold">Account Is Active</span>
                    </div>
                </div>
            }

            <div class="row">
                <div class="col-md-12">
                    <a asp-controller="Security" asp-action="Index" class="btn btn-dark" style="width:100px" title="Go Back">
                        <span class="text-white">Back</span>
                    </a>
                </div>
            </div>
        </form>
        </div>
    </div>
</div>




