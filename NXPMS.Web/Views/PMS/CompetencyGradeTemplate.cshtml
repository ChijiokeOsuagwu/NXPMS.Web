
@model NXPMS.Web.Models.PMSViewModels.ReviewGradeListViewModel
<div class="container">
    <h3 class="mb-1">Competency Grades</h3>
    <hr />
    <div class="mb-1">
        <div class="mb-2">
            <a asp-controller="PMS" asp-action="Grading" class="btn btn-dark" style="width:100px" title="Back">
                <span class="text-white">Back</span>
            </a>

            <a asp-controller="PMS" asp-action="ManageCompetencyGrade" asp-route-td="@Model.TemplateId" class="btn btn-success" style="width:250px" title="Add New Competency Grade">
                <span class="text-white">New Competency Grade</span>
            </a>

            @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle"></i>
                    <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
        <div class="row">
            @if (Model == null || Model.ReviewGradeList == null || Model.ReviewGradeList.Count < 1)
            {
                <div class="alert alert-info fade show" role="alert">
                    <i class="bi bi-info-circle"></i>
                    <span class="fw-bold">No record was found.</span>
                </div>
            }
            else
            {
                <table class="table table-sm table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th><span class="text-white fw-bolder">Description</span></th>
                            <th>
                                <span class="text-white fw-bolder">Lower Limit</span>
                            </th>
                            <th>
                                <span class="text-white fw-bolder">Upper Limit</span>
                            </th>
                            <th>
                                <span class="text-white fw-bolder">Rank</span>
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody class="table-success">
                        @foreach (var item in Model.ReviewGradeList)
                        {
                            <tr>
                                <td class="p-2">
                                    <span class="fw-bolder">@item.ReviewGradeDescription</span>
                                </td>
                                <td class="p-2">
                                    <span class="fw-bolder">@item.LowerBandScore</span>
                                </td>
                                <td class="p-2">
                                    <span class="fw-bolder">@item.UpperBandScore</span>
                                </td>
                                <td class="p-2">
                                    <span class="fw-bolder">@item.GradeRankDescription</span>
                                </td>
                                <td class="p-2 text-end">
                                    <div class="dropdown">
                                        <a class="btn btn-sm btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                            Select Action
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                            <li>
                                                <a asp-controller="PMS" asp-action="ManageCompetencyGrade" asp-route-id="@item.ReviewGradeId" asp-route-td="@Model.TemplateId" title="Edit" class="dropdown-item">
                                                    <span class="fw-bold">Edit</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a asp-controller="PMS" asp-action="DeleteCompetencyGrade" asp-route-id="@item.ReviewGradeId" title="Delete" class="dropdown-item">
                                                    <span class="fw-bold">Delete</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

        </div>
    </div>
</div>


