
@model NXPMS.Web.Models.PMSViewModels.ManageAppraisalScheduleViewModel
<h3 class="mb-1">Appraisal Schedules</h3>
<hr />
<div class="card mt-1" style="max-width:800px">
    <div class="card-header bg-dark">
        <h4 class="text-white">Appraisal Schedule Information</h4>
    </div>
    <div class="card-body bg-secondary">
        @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i>
                <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle"></i>
                <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
            <div class="row">
                <div class="col-md-12 mb-3">
                    <input type="hidden" asp-for="SessionScheduleId" />
                    <input type="hidden" asp-for="ReviewSessionId" />
                    <input type="hidden" asp-for="ScheduleTypeId" />
                    <label asp-for="ActivityTypeId" class="form-label text-white fw-bold"></label>
                    <div class="form-control"><span class="text-dark fw-bold">@Model.ActivityTypeDescription</span></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ScheduleStartTime" class="form-label text-white fw-bold"></label>
                    <div class="form-control"><span class="text-dark fw-bold">@Model.ScheduleStartTime.Value.ToLongDateString() @Model.ScheduleStartTime.Value.ToLongTimeString()</span></div>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ScheduleEndTime" class="form-label text-white fw-bold"></label>
                    <div class="form-control"><span class="text-dark fw-bold">@Model.ScheduleEndTime.Value.ToLongDateString() @Model.ScheduleEndTime.Value.ToLongTimeString()</span></div>
                </div>
            </div>

            @switch (Model.ScheduleTypeId)
            {
                case 1:
                    <div class="row">
                        <div class="col-md-12">
                            <label asp-for="ScheduleLocationId" class="form-label text-white fw-bold"></label>
                            <div><span class="text-white fw-bold" style="font-size:1.0rem">@Model.ScheduleLocationName</span></div>
                        </div>
                    </div>
                    break;
                case 2:
                    <div class="row">
                        <div class="col-md-12">
                            <label asp-for="ScheduleDepartmentCode" class="form-label text-white fw-bold"></label>
                            <div><span class="text-white fw-bold" style="font-size:1.0rem">@Model.ScheduleDepartmentName</span></div>
                        </div>
                    </div>
                    break;
                case 3:
                    <div class="row">
                        <div class="col-md-12">
                            <label asp-for="ScheduleUnitCode" class="form-label text-white fw-bold"></label>
                            <div><span class="text-white fw-bold" style="font-size:1.0rem">@Model.ScheduleUnitName</span></div>
                        </div>
                    </div>
                    break;
                case 4:
                    <div class="row">
                        <div class="col-md-12">
                            <label asp-for="ScheduleEmployeeName" class="form-label text-white fw-bold"></label>
                            <div><span class="text-white fw-bold" style="font-size:1.0rem">@Model.ScheduleEmployeeName</span></div>
                        </div>
                    </div>
                    break;
                default:
                    <div class="row mb-3">
                        <div class="col-md-12 pt-2 pb-2">
                            <i class="bi bi-check2-square" style="font-size:1.3rem; color:white"></i>
                            <span class="text-white fw-bold ml-2" style="font-size:1.0rem">Scheduled for Everyone</span>
                        </div>
                    </div>
                    break;
            }
            <div class="row mt-3">
                <div class="col-md-12">
                    <button class="btn btn-dark" style="width:100px" onclick="history.back();;"><span class="text-white fw-bold">Back</span></button>
                </div>
            </div>
    </div>
</div>


