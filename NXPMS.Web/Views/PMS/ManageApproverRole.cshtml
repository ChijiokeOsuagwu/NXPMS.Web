
@model NXPMS.Web.Models.PMSViewModels.ApprovalRoleViewModel
<h3 class="mb-1">Approver Role Settings</h3>
<hr />
<div class="card mt-1" style="max-width:1000px">
    <div class="card-header bg-success">
        <h4 class="text-white">Manage Approver Role</h4>
    </div>
    <div class="card-body bg-secondary">
        @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i>
                <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle"></i>
                <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <form asp-controller="PMS" asp-action="ManageApproverRole" method="post" autocomplete="off">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <input type="hidden" asp-for="ApprovalRoleID" />
                    <label asp-for="ApprovalRoleName" class="form-label text-white fw-bold"></label>
                    <input asp-for="ApprovalRoleName" class="form-control" placeholder="Enter Role">
                    <div><span asp-validation-for="ApprovalRoleName" class="text-danger"></span></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="MustApproveContract" class="form-label text-white fw-bold"></label>
                    <select asp-for="MustApproveContract" class="form-control" >
                        <option value="false">No</option>
                        <option value="true">Yes</option>
                        </select>
                    <div><span asp-validation-for="MustApproveContract" class="text-danger"></span></div>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="MustApproveEvaluation" class="form-label text-white fw-bold"></label>
                    <select asp-for="MustApproveEvaluation" class="form-control">
                        <option value="false">No</option>
                        <option value="true">Yes</option>
                    </select>
                    <div><span asp-validation-for="MustApproveEvaluation" class="text-danger"></span></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a asp-controller="PMS" asp-action="ApproverRoles" class="btn btn-dark" style="width:100px" title="Exit">
                        <span class="text-white">Back</span>
                    </a>
                    <a asp-controller="PMS" asp-action="ManageApproverRole" asp-route-id="@Model.ApprovalRoleID" class="btn btn-warning" style="width:100px" title="Clear">
                        <span class="text-white">Clear</span>
                    </a>
                    @if (!Model.OperationIsSuccessful)
                    {
                        <button type="submit" class="btn btn-success" title="Save" style="width:200px"><span class="text-white">Save</span></button>
                    }

                </div>
            </div>
        </form>
    </div>
</div>



