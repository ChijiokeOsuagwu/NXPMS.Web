                                                                                <span class="text-white">Edit</span>
                                                                            </a>
                                                                            <a asp-controller="PMS" asp-action="DeleteAppraisalKpa" asp-route-id="@kpa.ReviewMetricId" class="btn btn-danger ml-1" style="width:100px" title="Delete">
                                                                                <span class="text-white">Delete</span>
                                                                            </a>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>*@
                                            }
                                            </tbody>
                                          </table>
                            </div>
                        }
                    </div>
                </div>
                <div class="tab-pane" id="messages" role="tabpanel" aria-labelledby="messages-tab">
                    <div class="row">
                        @if (Model == null || Model.CompetencyList == null || Model.CompetencyList.Count < 1)
                        {
                            <div class="alert alert-info fade show" role="alert">
                                <i class="bi bi-info-circle"></i>
                                <span class="fw-bold">No record was found.</span>
                            </div>
                        }
                        else
                        {
                            int row_number = 0;
                            <div class="table-responsive">
                                <table class="table border-0">
                                    <thead style="background-color:#1e8449">
                                        <tr>
                                            <th>
                                                <span class="text-white fw-bolder" style="font-size:1.0rem">#</span>
                                            </th>
                                            <th>
                                                <span class="text-white fw-bolder" style="font-size:1.0rem">Competency Description</span>
                                            </th>
                                            <th>
                                                <span class="text-white fw-bolder" style="font-size:1.0rem">Wt.</span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var competency in Model.CompetencyList)
                                        {
                                            row_number++;
                                            <tr style="border-bottom:2px solid #abb2b9">
                                                <td>
                                                    <span class="text-dark fw-bolder" style="font-size:1.0rem">@row_number.ToString()</span>
                                                </td>
                                                <td>
                                                    <div>
                                                        <span class="text-dark fw-bold" style="font-size:1.0rem">
                                                            @competency.ReviewMetricDescription
                                                        </span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="text-dark fw-bold" style="font-size:1.0rem">
                                                        @competency.ReviewMetricWeightage.ToString()
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
                <div class="tab-pane" id="settings" role="tabpanel" aria-labelledby="settings-tab">
                    <div class="row">
                        @if (Model == null || Model.CdgList == null || Model.CdgList.Count < 1)
                        {
                            <div class="alert alert-secondary alert-dismissible fade show" role="alert">
                                <i class="bi bi-x-circle"></i>
                                <span class="fw-bold text-dark">No record was found.</span>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        else
                        {
                            int row_number = 0;
                            <div class="table-responsive">
                                <table class="table border-0">
                                    <tbody>
                                        @foreach (var cdg in Model.CdgList)
                                        {
                                            row_number++;
                                            <tr style="border-bottom:2px solid #abb2b9">
                                                <td>
                                                    <div class="card">
                                                        <div class="card-header" style="background-color:#943126">
                                                            <span class="fw-bold text-white" style="font-size: 1.0rem;">CDG #@row_number</span>
                                                        </div>
                                                        <div class="card-body" style="background-color:#ccccff">
                                                            <div class="row">
                                                                <div class="col-md-12 mb-2">
                                                                    <label class="form-label text-dark fw-bold">CDG Description</label>
                                                                    <textarea asp-for="@cdg.ReviewCdgDescription" class="form-control fw-bold" rows="2" style="font-size:1.0rem" readonly="readonly">@cdg.ReviewCdgDescription</textarea>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-12 mb-2">
                                                                    <label class="form-label text-dark fw-bold">CDG Objective</label>
                                                                    <textarea asp-for="@cdg.ReviewCdgObjective" class="form-control fw-bold" rows="2" style="font-size:1.0rem" readonly="readonly">@cdg.ReviewCdgObjective</textarea>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-12 mb-2">
                                                                    <label class="form-label text-dark fw-bold">Action Plan</label>
                                                                    <textarea asp-for="@cdg.ReviewCdgActionPlan" class="form-control fw-bold" rows="2" style="font-size:1.0rem" readonly="readonly">@cdg.ReviewCdgActionPlan</textarea>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>


