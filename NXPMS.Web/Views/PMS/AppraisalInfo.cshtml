@model NXPMS.Web.Models.PMSViewModels.AppraisalInfoViewModel
    <div class="container">
        <h4 class="mb-1">Performance Contract for @Model.AppraisalReviewHeader.AppraiseeName</h4>
        <hr />
        <div class="row">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <button title="Go Back" class="btn btn-sm btn-outline-light text-dark" onclick="history.back()">
                                    <i class="bi bi-backspace fw-bolder" style="font-size: 1.0rem;"></i>&nbsp;<span class="fw-bold ml-1" style="font-size: 0.9rem;">Back</span>
                                </button>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="PMS" asp-action="ApproveContract" asp-route-id="@Model.AppraisalReviewHeader.ReviewHeaderId" asp-route-sd="@Model.ReviewSubmissionID" title="Approve Contract" class="btn btn-sm btn-light text-dark">
                                    <i class="bi bi-clipboard-check fw-bolder" style="font-size: 1.0rem;"></i><span class="fw-bold ml-1" style="font-size: 0.9rem;">Approve this Contract</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-Controller="PMS" asp-action="ReturnContract" asp-route-id="@Model.AppraisalReviewHeader.ReviewHeaderId" asp-route-sd="@Model.ReviewSubmissionID" title="Return for Correction" class="btn btn-sm btn-light text-dark">
                                    <i class="bi bi-reply-all fw-bolder" style="font-size: 1.0rem;"></i><span class="fw-bold ml-1" style="font-size: 0.9rem;">Return for Correction</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="PMS" asp-action="AppraisalNotes" asp-route-id="@Model.AppraisalReviewHeader.ReviewHeaderId" asp-route-sp="apr" title="Appraisal Notes" class="btn btn-sm btn-light text-dark">
                                    <i class="bi bi-journals fw-bolder" style="font-size: 1.0rem"></i><span class="fw-bold ml-1" style="font-size: 0.9rem;">Notes</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="PMS" asp-action="AppraisalActivities" asp-route-id="@Model.AppraisalReviewHeader.ReviewHeaderId" asp-route-sp="stp" title="Appraisal Activity History" class="btn btn-sm btn-light text-dark">
                                    <i class="bi bi-journals fw-bolder" style="font-size: 1.0rem"></i><span class="fw-bold ml-1" style="font-size: 0.9rem;">History</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <div class="row">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link btn-dark active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true" style="width:150px"><span class="fw-bold">Summary</span></button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link btn-info" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false"><span class="fw-bold">Key Performance Areas</span></button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link btn-success" id="messages-tab" data-bs-toggle="tab" data-bs-target="#messages" type="button" role="tab" aria-controls="messages" aria-selected="false" style="width:150px"><span class="fw-bold text-white">Competencies</span></button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings" type="button" role="tab" aria-controls="settings" aria-selected="false" style="background-color:#943126"><span class="fw-bold text-white">Career Development Goals</span></button>
                </li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content mt-2">
                <div class="tab-pane active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="card">
                        <div class="card-body bg-dark">
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <label class="form-label text-white">Appraisee:</label>
                                    <div class="form-control text-dark fw-bold">@Model.AppraisalReviewHeader.AppraiseeName</div>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <label class="form-label text-white">Appraisee Designation:</label>
                                    <div class="form-control text-dark fw-bold">@Model.AppraisalReviewHeader.AppraiseeDesignation</div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <label class="form-label text-white">Appraiser:</label>
                                    <div class="form-control text-dark fw-bold">@Model.AppraisalReviewHeader.PrimaryAppraiserName</div>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <label class="form-label text-white">Appraiser Designation:</label>
                                    <div class="form-control text-dark fw-bold">@Model.AppraisalReviewHeader.PrimaryAppraiserDesignation</div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <label class="form-label text-white">Appraisal Session:</label>
                                    <div class="form-control text-dark fw-bold">@Model.AppraisalReviewHeader.ReviewSessionName</div>
                                </div>
                                <div class="col-md-2 mb-2">
                                    <label class="form-label text-white">Performance Year:</label>
                                    <div class="form-control text-dark fw-bold">@Model.AppraisalReviewHeader.ReviewYearName</div>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <label class="form-label text-white">Current Stage:</label>
                                    <div class="form-control text-dark fw-bold">@Model.AppraisalReviewHeader.ReviewStageDescription</div>
                                </div>
                            </div>
                            <div class="row">
                                <label class="form-label text-white">Performance Goal:</label>
                                <textarea class="form-control fw-bold" rows="4" style="font-size:1.0rem">@Model.AppraisalReviewHeader.PerformanceGoal</textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="row">
                        @if (Model == null || Model.KpaList == null || Model.KpaList.Count < 1)
                        {
                            <div class="alert alert-secondary alert-dismissible fade show" role="alert">
                                <i class="bi bi-x-circle"></i>
                                <span class="fw-bold text-dark">No record was found.</span>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        else
                        {
                            int row_number = 0;
                            <div class="table-responsive">
                                    <table class="table border-0">
                                        <tbody>
                                            @foreach (var kpa in Model.KpaList)
                                            {
                                                row_number++;
                                                <tr>
                                                    <td>
                                                        <div class="card">
                                                            <div class="card-header bg-info">
                                                                <span class="fw-bold text-white" style="font-size: 0.9rem;">KPA #@row_number</span>
                                                            </div>
                                                            <div class="card-body" style="background-color:#ccccff">
                                                                <div class="row">
                                                                    <div class="col-md-12 mb-2">
                                                                        <label class="form-label text-dark fw-bold">KPA Description</label>
                                                                        <textarea asp-for="@kpa.ReviewMetricDescription" class="form-control fw-bold" rows="3" style="font-size:1.0rem" readonly="readonly">@kpa.ReviewMetricDescription</textarea>
                                                                    </div>
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-md-12 mb-2">
                                                                        <label class="form-label text-dark fw-bold">Measurement</label>
                                                                        <textarea asp-for="@kpa.ReviewMetricKpi" class="form-control fw-bold" rows="2" style="font-size:1.0rem" readonly="readonly">@kpa.ReviewMetricKpi</textarea>
                                                                    </div>
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-md-12 mb-2">
                                                                        <label class="form-label text-dark fw-bold">Target</label>
                                                                        <textarea asp-for="@kpa.ReviewMetricTarget" class="form-control fw-bold" rows="2" style="font-size:1.0rem" readonly="readonly">@kpa.ReviewMetricTarget</textarea>
                                                                    </div>
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-md-2">
                                                                        <label class="form-label text-dark fw-bold">Weightage</label>
                                                                        <div class="form-control fw-bold">@kpa.ReviewMetricWeightage</div>
                                                                    </div>
                                                                    <div class="col-md-10 text-end">
                                                                        @*<a asp-controller="PMS" asp-action="ManageAppraisalKpa" asp-route-id="@kpa.ReviewHeaderId" asp-route-md="@kpa.ReviewMetricId" class="btn btn-info" style="width:100px" title="Edit">
                                                                            <span class="text-white">Edit</span>
                                                                        </a>
                                                                        <a asp-controller="PMS" asp-action="DeleteAppraisalKpa" asp-route-id="@kpa.ReviewMetricId" class="btn btn-danger ml-1" style="width:100px" title="Delete">
                                                                            <span class="text-white">Delete</span>
                                                                        </a>*@
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                @*<div class="accordion-item">
                                                    <h2 class="accordion-header bg-info" id="heading_@row_number">
                                                        <button class="accordion-button bg-info" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@row_number" aria-expanded="true" aria-controls="collapse_@row_number">
                                                            <span class="fw-bold text-white" style="font-size: 0.9rem;">KPA #@row_number</span>
                                                        </button>
                                                    </h2>
                                                    <div id="collapse_@row_number" class="accordion-collapse collapse" aria-labelledby="heading_@row_number" data-bs-parent="#accordionKpa">
                                                        <div class="accordion-body" style="background-color:#ccccff">
                                                            <div class="card">
