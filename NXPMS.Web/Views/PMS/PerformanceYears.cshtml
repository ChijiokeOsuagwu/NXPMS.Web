@model NXPMS.Web.Models.PMSViewModels.PerformanceYearsListViewModel
<div class="container">
    <h3 class="mb-1">Performance Years</h3>
    <hr />
    <div class="mb-1">
        <div class="mb-2">
            <form asp-controller="PMS" asp-action="PerformanceYears" method="get" autocomplete="off">
                <a asp-controller="PMS" asp-action="Settings" class="btn btn-dark" style="width:100px" title="Back">
                    <span class="text-white">Back</span>
                </a>
                <a asp-controller="PMS" asp-action="ManagePerformanceYear" asp-route-id="0" class="btn btn-success" style="width:200px" title="Add New Performance Year">
                    <span class="text-white">New Performance Year</span>
                </a>
            </form>

            @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle"></i>
                    <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
        <div class="row">
            @if (Model == null || Model.PerformanceYearList == null || Model.PerformanceYearList.Count < 1)
            {
                <div class="alert alert-info fade show" role="alert">
                    <i class="bi bi-info-circle"></i>
                    <span class="fw-bold">No record was found.</span>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-sm table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>
                                    <span class="text-white fw-bolder">Year Name</span>
                                </th>
                                <th>
                                    <span class="text-white fw-bolder">Start Date</span>
                                </th>
                                <th>
                                    <span class="text-white fw-bolder">End Date</span>
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody class="table-warning">
                            @foreach (var item in Model.PerformanceYearList)
                            {
                                <tr>
                                    <td class="p-2">
                                        <span class="fw-bolder">@item.Name</span>
                                    </td>
                                    <td class="p-2">
                                        <span class="fw-bolder">@item.StartDate.Value.ToString("dd-MM-yyyy")</span>
                                    </td>
                                    <td class="p-2">
                                        <span class="fw-bolder">@item.EndDate.Value.ToString("dd-MM-yyyy")</span>
                                    </td>
                                    <td class="p-2">
                                        <form asp-controller="PMS" asp-action="DeletePerformanceYear" method="post">
                                            <a asp-controller="PMS" asp-action="ManagePerformanceYear" asp-route-id="@item.Id" title="Select" class="btn btn-sm btn-dark">
                                                <span class="text-white fw-bold">Select</span>
                                            </a>
                                            <input type="hidden" id="yd" name="yd" value="@item.Id" />
                                            <input type="submit" value="Delete" class="btn btn-sm btn-danger pl-3 text-white" onclick="return confirm('Delete permanently?');" />
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

        </div>
    </div>
</div>

