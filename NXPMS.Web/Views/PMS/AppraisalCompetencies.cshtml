@model NXPMS.Web.Models.PMSViewModels.AppraisalCompetenciesViewModel
<div class="container">
    <h4 class="mb-1">Appraisal Competencies</h4>
    <hr />
    <div class="row">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-controller="PMS" asp-action="MyAppraisalSessions" title="Go Back" class="btn btn-sm btn-outline-light text-dark">
                                <i class="bi bi-backspace fw-bolder" style="font-size: 1.0rem;"></i>&nbsp;<span class="fw-bold ml-1" style="font-size: 0.9rem;">Back</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="PMS" asp-action="SelectCompetencies" asp-route-id="@Model.ReviewHeaderID" title="Add New Competency" class="btn btn-sm btn-outline-light text-dark" style="width:200px">
                                <i class="bi bi-plus-lg fw-bolder" style="font-size: 1.0rem;"></i><span class="fw-bold" style="font-size: 0.9rem;">New Competency</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="mb-1">
        <input type="hidden" asp-for="ReviewHeaderID" />
        <input type="hidden" asp-for="ReviewSessionID" />
        <input type="hidden" asp-for="AppraiseeID" />
        <input type="hidden" asp-for="ReviewStageID" />
        <div>
            @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle"></i>
                    <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
        <div class="row">
            @if (Model == null || Model.ReviewMetricList == null || Model.ReviewMetricList.Count < 1)
            {
                <div class="alert alert-info fade show" role="alert">
                    <i class="bi bi-info-circle"></i>
                    <span class="fw-bold">No record was found.</span>
                </div>
            }
            else
            {
                int row_number = 0;
                <div class="table-responsive">
                    <table class="table border-0">
                        <thead style="background-color:#273746">
                            <tr>
                                <th>
                                    <span class="text-white fw-bolder" style="font-size:1.0rem">#</span>
                                </th>
                                <th>
                                    <span class="text-white fw-bolder" style="font-size:1.0rem">Competency Description</span>
                                </th>
                                <th>
                                    <span class="text-white fw-bolder" style="font-size:1.0rem">Wt.</span>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var competency in Model.ReviewMetricList)
                            {
                                row_number++;
                                <tr style="border-bottom:2px solid #abb2b9">
                                    <td>
                                        <span class="text-dark fw-bolder" style="font-size:1.0rem">@row_number.ToString()</span>
                                    </td>
                                    <td>
                                        <div>
                                            <span class="text-dark fw-bold" style="font-size:1.0rem">
                                                @competency.ReviewMetricDescription
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="text-dark fw-bold" style="font-size:1.0rem">
                                            @competency.ReviewMetricWeightage.ToString()
                                        </span>
                                    </td>
                                    <td class="p-2 text-end">
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                                Select Action
                                            </button>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <li>
                                                    <a class="dropdown-item" asp-controller="PMS" asp-action="ManageAppraisalCompetency" asp-route-id="@competency.ReviewMetricId" title="Edit">
                                                        Edit
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" asp-controller="PMS" asp-action="DeleteAppraisalCompetency" asp-route-id="@competency.ReviewMetricId" title="Delete Competency">
                                                        Delete
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
