@model NXPMS.Web.Models.PMSViewModels.AddCompetencyViewModel
<h3>Appraisal Competency</h3>
<hr />
<div class="card mt-1">
    <div class="card-header bg-danger">
        <h4 class="text-white">Delete Competency</h4>
    </div>
    <div class="card-body bg-secondary">
        @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i>
                <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle"></i>
                <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <form asp-controller="PMS" asp-action="DeleteAppraisalCompetency" method="post" autocomplete="off">
            <div class="row">
                <div class="col-md-12 mb-2">
                    <input type="hidden" asp-for="ReviewHeaderId" />
                    <input type="hidden" asp-for="ReviewMetricId" />
                    <input type="hidden" asp-for="ReviewSessionId" />
                    <input type="hidden" asp-for="ReviewYearId" />
                    <input type="hidden" asp-for="AppraiseeId" />
                    <label asp-for="ReviewMetricDescription" class="form-label text-white fw-bold"></label>
                    <textarea asp-for="ReviewMetricDescription" class="form-control fw-bold" rows="4" style="font-size:1.0rem" readonly="readonly">@Model.ReviewMetricDescription</textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <label asp-for="ReviewMetricWeightage" class="form-label text-white fw-bold"></label>
                    <input asp-for="ReviewMetricWeightage" class="form-control" type="number" min="1.00" max="100.00" step="1" readonly="readonly"/>
                </div>
                <div class="col-md-10 text-end">
                    <a asp-controller="PMS" asp-action="MyAppraisalSteps" asp-route-id="@Model.ReviewSessionId" class="btn btn-dark" style="width: 100px" title="Back">
                        <span class="text-white">Back</span>
                    </a>
                    <button type="submit" class="btn btn-danger" title="Save" style="width:200px;"><span class="text-white" onclick="return confirm('Are you sure you want to delete this item permanently?')">Delete</span></button>
                </div>
            </div>
        </form>
    </div>
</div>




