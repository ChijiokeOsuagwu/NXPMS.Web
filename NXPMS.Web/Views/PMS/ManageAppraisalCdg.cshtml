
@model NXPMS.Web.Models.PMSViewModels.ManageAppraisalCdgViewModel
<h3>Career Development Goal (CDG)</h3>
<hr />
<div class="card mt-1">
    <div class="card-header bg-success">
        <h4 class="text-white">Manage Career Development Goal</h4>
    </div>
    <div class="card-body bg-secondary">
        @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i>
                <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle"></i>
                <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    <form asp-controller="PMS" asp-action="ManageAppraisalCdg" method="post" autocomplete="off">
        <div class="row">
            <div class="col-md-12 mb-2">
                <input type="hidden" asp-for="ReviewHeaderId" />
                <input type="hidden" asp-for="ReviewCdgId" />
                <input type="hidden" asp-for="ReviewSessionId" />
                <input type="hidden" asp-for="ReviewYearId" />
                <input type="hidden" asp-for="AppraiseeId" />
                <label asp-for="ReviewCdgDescription" class="form-label text-white fw-bold"></label>
                <textarea asp-for="ReviewCdgDescription" class="form-control fw-bold" rows="2" style="font-size:1.0rem">@Model.ReviewCdgDescription</textarea>
                <div><span asp-validation-for="ReviewCdgDescription" class="text-danger"></span></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mb-2">
                <label asp-for="ReviewCdgObjective" class="form-label text-white fw-bold"></label>
                <textarea asp-for="ReviewCdgObjective" class="form-control fw-bold" rows="2" style="font-size:1.0rem">@Model.ReviewCdgObjective</textarea>
                <div><span asp-validation-for="ReviewCdgObjective" class="text-danger"></span></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mb-3">
                <label asp-for="ReviewCdgActionPlan" class="form-label text-white fw-bold"></label>
                <textarea asp-for="ReviewCdgActionPlan" class="form-control fw-bold" rows="2" style="font-size:1.0rem">@Model.ReviewCdgActionPlan</textarea>
                <div><span asp-validation-for="ReviewCdgActionPlan" class="text-danger"></span></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mb-3 text-end">
                <a asp-controller="PMS" asp-action="AppraisalCdgs" asp-route-id="@Model.ReviewHeaderId" class="btn btn-dark" style="width:100px" title="Back">
                    <span class="text-white">Back</span>
                </a>
                <a asp-controller="PMS" asp-action="ManageAppraisalCdg" asp-route-id="@Model.ReviewHeaderId" asp-route-cd="@Model.ReviewCdgId" class="btn btn-warning" style="width:100px" title="Clear">
                    <span class="text-white">Clear</span>
                </a>
                @if (!Model.OperationIsSuccessful)
                {
                    <button type="submit" class="btn btn-success" title="Save" style="width:200px"><span class="text-white">Save</span></button>
                }
            </div>
        </div>
    </form>
    </div>
</div>



