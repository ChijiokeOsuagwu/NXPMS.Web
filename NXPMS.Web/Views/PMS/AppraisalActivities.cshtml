@model NXPMS.Web.Models.PMSViewModels.AppraisalActivitiesViewModel
<div class="container">
    <h4 class="mb-1">Appraisal Activity History</h4>
    <hr />
    <div class="row">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <button title="Go Back" class="btn btn-sm btn-outline-light text-dark" onclick="history.back();">
                                <i class="bi bi-backspace fw-bolder" style="font-size: 1.0rem;"></i>&nbsp;<span class="fw-bold ml-1" style="font-size: 0.9rem;">Back</span>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="mb-1">
        <input type="hidden" asp-for="ReviewHeaderID" />
        <input type="hidden" asp-for="ReviewSessionID" />
        <input type="hidden" asp-for="AppraiseeID" />
        <div>
            @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle"></i>
                    <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
        <div class="row">
            @if (Model == null || Model.ReviewActivityList == null || Model.ReviewActivityList.Count < 1)
            {
                <div class="alert alert-info fade show" role="alert">
                    <i class="bi bi-info-circle"></i>
                    <span class="fw-bold">No record was found.</span>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title mb-0">Recent Activities</h4>
                            </div>
                            <div class="comment-widgets scrollable">
                                @foreach (var activity in Model.ReviewActivityList)
                                {
                                    <!-- Comment Row -->
                                    <div class="d-flex flex-row comment-row mt-0">
                                        <div class="comment-text w-100">
                                            <h6 class="font-medium">@activity.ActivityTime.Value.ToLongDateString() @activity.ActivityTime.Value.ToLongTimeString()</h6>
                                            <span class="d-block fw-bold">@activity.ActivityDescription</span>
                                        </div>
                                    </div>
                                    <hr />
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
