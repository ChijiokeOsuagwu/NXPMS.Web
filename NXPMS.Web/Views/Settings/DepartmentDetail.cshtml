@model NXPMS.Web.Models.SettingsModels.ManageDepartmentViewModel
<h3>Department Settings</h3>
<hr />
<div class="card mt-1" style="max-width:600px">
    <div class="card-header bg-dark">
        <h4 class="text-white">Department Information</h4>
    </div>
    <div class="card-body" style="background-color:#edbb99">
        @if (!String.IsNullOrEmpty(Model.ViewModelErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i>
                <span class="fw-bold">@Model.ViewModelErrorMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.ViewModelSuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i>
                <span class="fw-bold">@Model.ViewModelSuccessMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.ViewModelWarningMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle"></i>
                <span class="fw-bold">@Model.ViewModelWarningMessage</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="row">
            <div class="col-md-2 mb-2">
                <label asp-for="DepartmentCode" class="form-label text-dark fw-bold"></label>
                <div class="form-control fw-bold">@Model.DepartmentCode</div>
            </div>
            <div class="col-md-10 mb-2">
                <input type="hidden" asp-for="DepartmentHeadID" />
                <input type="hidden" asp-for="DepartmentAltHeadID" />
                <label asp-for="DepartmentName" class="form-label text-dark fw-bold"></label>
                <div class="form-control fw-bold">@Model.DepartmentName</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mb-2">
                <label asp-for="DepartmentHeadName" class="form-label text-dark fw-bold"></label>
                <div class="form-control fw-bold">@Model.DepartmentHeadName</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mb-3">
                <label asp-for="DepartmentAltHeadName" class="form-label text-dark fw-bold"></label>
                <div class="form-control fw-bold">@Model.DepartmentAltHeadName</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mb-1 text-end">
                <button class="btn btn-secondary" style="width:100px" title="Back" onclick="history.back()">
                    <span class="text-white">Back</span>
                </button>
            </div>
        </div>
    </div>
</div>
