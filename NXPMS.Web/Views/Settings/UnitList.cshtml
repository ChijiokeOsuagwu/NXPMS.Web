
@model NXPMS.Web.Models.SettingsModels.UnitListViewModel
<div class="container">
    <h3 class="mb-1">Unit Settings</h3>
    <hr />
    <div class="mb-1">
        <div class="row">
            <div class="col-md-2 mb-1 text-start">
                <a asp-controller="Settings" asp-action="Index" class="btn btn-dark" style="width:100px" title="Back">
                    <span class="text-white">Back</span>
                </a>
            </div>
            <div class="col-md-7 mb-1 text-start">
                <form asp-controller="Settings" asp-action="UnitList" method="get">
                    <select asp-for="dc" asp-items="@ViewBag.DepartmentList" class="border-0" style="width:300px">
                        <option value="">- Select Department -</option>
                    </select>
                    <input type="submit" value="Search" class="btn btn-dark mr-3 text-white" style="width:150px" />
                </form>
            </div>
            <div class="col-md-3 mb-1 text-end">
                <a asp-controller="Settings" asp-action="ManageUnit" asp-route-cd="" class="btn btn-success" style="width:150px" title="Add New Unit">
                    <span class="text-white">New Unit</span>
                </a>
            </div>
        </div>
        <div class="row">
            @if (Model == null || Model.UnitList == null || Model.UnitList.Count < 1)
            {
                <div class="alert alert-info fade show" role="alert">
                    <i class="bi bi-info-circle"></i>
                    <span class="fw-bold">No record was found.</span>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-sm table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>
                                    <div class="text-center">
                                        <span class="text-white fw-bolder">Code</span>
                                    </div>
                                </th>
                                <th>
                                    <span class="text-white fw-bolder">Name</span>
                                </th>
                                <th>
                                    <span class="text-white fw-bolder">Department</span>
                                </th>
                                <th>
                                    <span class="text-white fw-bolder">Head</span>
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody class="table-warning">
                            @foreach (var item in Model.UnitList)
                            {
                            <tr>
                                <td class="p-2">
                                    <div class="text-center">
                                        <span class="fw-bolder">@item.UnitCode</span>
                                    </div>
                                </td>
                                <td class="p-2">
                                    <span class="fw-bolder">@item.UnitName</span>
                                </td>
                                <td class="p-2">
                                    <span class="fw-bolder">@item.DepartmentName</span>
                                </td>
                                <td class="p-2">
                                    <span class="fw-bolder">@item.UnitHeadName</span>
                                </td>
                                <td class="p-2">
                                    <div class="cold-md-12 text-end">
                                        <a asp-controller="Settings" asp-action="ManageUnit" asp-route-cd="@item.UnitCode" title="Edit" class="btn btn-sm btn-info" style="width:75px">
                                            <span class="text-white fw-bold">Edit</span>
                                        </a>
                                        <a asp-controller="Settings" asp-action="UnitDetail" asp-route-cd="@item.UnitCode" title="Detail" class="btn btn-sm btn-dark" style="width:75px">
                                            <span class="text-white fw-bold">Detail</span>
                                        </a>
                                        <a asp-controller="Settings" asp-action="DeleteUnit" asp-route-cd="@item.UnitCode" title="Delete" class="btn btn-sm btn-danger" style="width:75px">
                                            <span class="text-white fw-bold">Delete</span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

        </div>
    </div>
</div>



